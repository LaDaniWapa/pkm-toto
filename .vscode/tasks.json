{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++-11 build active file",
            "command": "/usr/bin/g++-11",
            "args": [
                "-std=c++11",
                "-g",
                "-I",
                "include",
                "-o",
                "main",
                "src/*.cpp",
                "screens/*.cpp",
                "-lraylib",
                "-lGL",
                "-lm",
                "-lpthread",
                "-ldl",
                "-lrt",
                "-lX11",
                "-fdiagnostics-color"
